<div class="container my-4">
@{
    //to change the title depending on the error
    if (Model == 404)//page not found
    {
        ViewData["Title"] = "Page not Found";
        <h2>Page not Found</h2>
        <h3 class="text-danger">
            The page you are looking for does not exit
        </h3>

        <div class="text-center">
            <div class="fas fa-exclamation-triangle" style="font-size:10em"></div>
        </div>

    }
    else if (Model == 500)//internal server error
    {
        ViewData["Title"] = "Internal Server Error";
        <h2>Internal Server Erro</h2>
        <h3 class="text-danger">
            There was an internal server error. Try again later.
        </h3>
        <div class="text-center">
            <div class="fas fa-fire" style="font-size:10em"></div>
        </div>
    }
    //the next line is a hyperlink and is the action controller
    <p>
        You can return to the
        <a asp-action="Index" asp-controller="Home"> home</a> page.
    </p>


}
</div>


